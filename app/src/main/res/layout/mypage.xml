<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/mypage_mp"
        android:layout_width="411dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="내 정보"
            android:textColor="@color/black"
            android:textSize="24dp" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="120dp"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/mypgae_inName"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:background="@drawable/border_white"
        android:text="   이름"
        android:textSize="16dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/mypage_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="18dp"
        android:text="소속"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/mypgae_inParty"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:background="@drawable/border_white"
        android:text="   소속"
        android:textSize="16dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/mypage_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="18dp"
        android:text="식별번호  "
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/mypgae_inNumber"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:background="@drawable/border_white"
        android:text="   식별번 ex)학번, 사번등"
        android:textSize="16dp"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/mypage_save"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:layout_gravity="center"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/border_black"/>
    
    
    <TextView
        android:id="@+id/mypage_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="300dp"
        android:text="로그아웃"
        android:textSize="18dp"
        android:textColor="@color/red"
        />




</LinearLayout>