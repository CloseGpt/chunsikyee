<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/signup_top_cv"
        android:layout_width="411dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="24dp" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logint"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:fontFamily="@font/kimjungchulgothicbold"
        android:textSize="25sp"
        android:textColor="@color/blk"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/signup_name"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:hint="이름"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:background="@drawable/border_white"/>

    <EditText
        android:id="@+id/signup_party"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:hint="소속"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:background="@drawable/border_white"/>

    <EditText
        android:id="@+id/signup_sNum"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:hint="식별번호 ex)학번, 사번등"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:background="@drawable/border_white"/>

    <EditText
        android:id="@+id/signup_id"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:hint="아이디"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:background="@drawable/border_white"/>

    <EditText
        android:id="@+id/signup_pw"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:hint="비밀번호"
        android:textSize="16dp"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textColor="@color/gray"
        android:background="@drawable/border_white"/>

    <EditText
        android:id="@+id/signup_pwr"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:hint="비밀번호 확인"
        android:fontFamily="@font/kimjungchulgothicregular"
        android:textSize="16dp"
        android:textColor="@color/gray"
        android:background="@drawable/border_white" />

    <Button
        android:id="@+id/signup_Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/border_black"
        android:fontFamily="@font/kimjungchulgothicbold"
        />
    </LinearLayout>

</LinearLayout>